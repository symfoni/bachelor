{
    "@id": "https://raw.githubusercontent.com/symfoni/bachelor/dev/schemas/employmentContractSchema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "EmploymentVC",
    "type": "object",
    "properties": {
        "credentialSubject": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "The employees' DID"
                },
                "employment": {
                    "type": "object",
                    "properties": {
                        "employee": {
                            "type": "object",
                            "description": "Describes attributes of the employee",
                            "properties": {
                                "employeeId": {
                                    "type": "string",
                                    "description": "The DID of the employee"
                                },
                                "jobTitle": {
                                    "type": "string",
                                    "description": "The title of the employees' job"
                                },
                                "placeOfWork": {
                                    "type": "string",
                                    "description": "Where the employee goes to work"
                                },
                                "hoursOfWork": {
                                    "type": "number",
                                    "description": "Expected weekly work hours"
                                },
                                "startDate": {
                                    "type": "string",
                                    "description": "The first day of work",
                                    "format": "date"
                                },
                                "endDate": {
                                    "type": "string",
                                    "description": "When the contract expires",
                                    "format": "date"
                                },
                                "employmentStatus": {
                                    "type": "object",
                                    "properties": {
                                        "employmentType": {
                                            "type": "string",
                                            "description": "Different type of employment relating to how much you work",
                                            "enum": [
                                                "full time",
                                                "part time",
                                                "freelance"
                                            ]
                                        },
                                        "partTimePercentage": {
                                            "type": "number",
                                            "description": "How many perecent you work part time of the standard weekly work hours"
                                        }
                                    },
                                    "required": [
                                        "employmentType",
                                        "partTimePercentage"
                                    ]
                                },
                                "salary": {
                                    "type": "object",
                                    "description": "How much money the employee earns",
                                    "properties": {
                                        "frequency": {
                                            "type": "string",
                                            "description": "How often the employee is paid",
                                            "enum": [
                                                "monthly",
                                                "weekly",
                                                "hourly"
                                            ]
                                        },
                                        "amount": {
                                            "type": "number",
                                            "description": "How much the employee is paid in relation to frequency"
                                        },
                                        "currency": {
                                            "type": "string",
                                            "description": "Which currency the employee is paid in"
                                        }
                                    },
                                    "required": [
                                        "frequency",
                                        "amount",
                                        "currency"
                                    ]
                                },
                                "trialPeriod": {
                                    "type": "object",
                                    "description": "The trial period of the employee",
                                    "properties": {
                                        "startDate": {
                                            "type": "string",
                                            "description": "When the trial period starts",
                                            "format": "date"
                                        },
                                        "endDate": {
                                            "type": "string",
                                            "description": "When the trial period ends",
                                            "format": "date"
                                        }
                                    },
                                    "required": [
                                        "startDate",
                                        "endDate"
                                    ]
                                },
                                "rightForPension": {
                                    "type": "boolean",
                                    "description": "If the employer gives special pension benefits"
                                },
                                "nonCompeteClause": {
                                    "type": "boolean",
                                    "description": "If the employee can do external work in the same field"
                                },
                                "requirementToWorkOverseas": {
                                    "type": "boolean",
                                    "description": "If the job requires the employee to work overseas"
                                }
                            },
                            "required": [
                                "employeeId",
                                "jobTitle",
                                "placeOfWork",
                                "hoursOfWork",
                                "startDate",
                                "employmentStatus",
                                "salary",
                                "rightForPension",
                                "nonCompeteClause",
                                "requirementToWorkOverseas"
                            ]
                        }
                    },
                    "contractPDF": {
                        "type": "object",
                        "properties": {
                            "URL": {
                                "type": "string",
                                "description": "The link to the downloadable contract pdf",
                                "format": "uri"
                            },
                            "hash": {
                                "type": "string",
                                "description": "The unique hash of the employment contract"
                            }
                        },
                        "required": [
                            "URL",
                            "hash"
                        ]
                    },
                    "required": [
                        "employee",
                        "contractPDF"
                    ]
                }
            },
            "required": [
                "id",
                "employment"
            ]
        }
    },
    "required": [
        "credentialSubject"
    ]
}